<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/iv_poster_popular"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title_popular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/sfpro_regular"
        android:gravity="start"
        android:maxLines="1"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/iv_poster_popular"
        app:layout_constraintStart_toStartOf="@id/iv_poster_popular"
        app:layout_constraintTop_toBottomOf="@id/iv_poster_popular" />

    <TextView
        android:id="@+id/tv_desc_poppular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/sfpro_regular"
        android:gravity="start"
        android:maxLines="2"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/tv_title_popular"
        app:layout_constraintStart_toStartOf="@id/iv_poster_popular"
        app:layout_constraintTop_toBottomOf="@id/tv_title_popular" />

</androidx.constraintlayout.widget.ConstraintLayout>